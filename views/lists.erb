<ul id="lists"> 
	<% @lists.each_with_index do |list, index| %>
    <% if list_complete?(list) %>
      <li class="complete">
    <% else %>
      <li>
    <% end %>
      <a href="/lists/<%= index %>" class="complete"> 
        <h2><%= list[:name] %></h2>
        <p><%= todos_remaining_count(list) %>/<%= todos_count(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %> 
  <a href="/lists/new" class="add">New Lists</a>
<% end %> 
